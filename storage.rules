
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is necessary for the local connector to download files via their URL.
    match /{allPaths=**} {
      allow read;
    }

    // Explicitly allow anyone to upload files to the 'uploads' folder.
    // Enforce a size limit of 10MB to prevent abuse.
    match /uploads/{fileName} {
      allow write: if request.resource.size < 10 * 1024 * 1024;
    }
  }
}
